{{#section 'header'}}
    <title>Delete my account</title>
{{/section}}
<div class="card mx-auto" style="width: 40rem;">
    <div class="card-header">
        Confirmation of account deletion
    </div>
    <div class="card-body">
        <form action="delete" method="POST">
            <div class="mb-3">
                <label for="password" class="form-label">Type your password to confirm</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-danger">Delete my account</button>
        </form>
    </div>
    <div class="card-footer">
        Please note that this action is irreversible. All your datas will be filled with dummy datas and you will not be able to access your account.
    </div>
</div>

{{#if message }}
    <h4 class="alert alert-danger mt-4">{{ message }}</h4>
{{/if}}