{{#section 'header'}}
    <title>Comment section</title>
{{/section}}

<section id="posts">
   <div class="text-center">
        <h1 class="display-5 fw-bold">Comment section</h1>
        <button type="button" class="btn btn-outline-success" onclick="location.href='posts/add'">Add a comment</button>
   </div>
   <div class="commentSection">
       {{#each comments}}
       <div class="comment mx-auto mt-4" style="max-width: 50rem;">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="leftSide">
                        <button type="button" class="btn btn-warning btn-sm" onclick="location.href='/posts/report/{{this.id}}'" aria-label="Left Align">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"></path>
                            </svg>
                        </button>
                    </div>
                    {{#if this.isMine }}
                    <div class="rightSide">
                        <button class="btn btn-success btn-sm" onclick="location.href='/posts/edit/{{this.id}}'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"></path>
                            </svg>
                        </button>
                        <button class="btn btn-danger btn-sm" onclick="location.href='/posts/delete/{{this.id}}'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eraser" viewBox="0 0 16 16">
                                <path d="M8.086 2.207a2 2 0 0 1 2.828 0l3.879 3.879a2 2 0 0 1 0 2.828l-5.5 5.5A2 2 0 0 1 7.879 15H5.12a2 2 0 0 1-1.414-.586l-2.5-2.5a2 2 0 0 1 0-2.828l6.879-6.879zm2.121.707a1 1 0 0 0-1.414 0L4.16 7.547l5.293 5.293 4.633-4.633a1 1 0 0 0 0-1.414l-3.879-3.879zM8.746 13.547 3.453 8.254 1.914 9.793a1 1 0 0 0 0 1.414l2.5 2.5a1 1 0 0 0 .707.293H7.88a1 1 0 0 0 .707-.293l.16-.16z"></path>
                            </svg>
                        </button>
                    </div>
                    {{/if}}
                </div>
                <div class="card-body d-flex justify-content-around">
                    <div class="profilePicture left">
                        <img src="{{this.imagePath}}" alt="">
                    </div>
                    <blockquote class="blockquote mb-0 mt-3" style="width: 30rem;">
                        <p>{{this.post}}</p>
                        <footer class="blockquote-footer">{{this.user}}</footer>
                    </blockquote>
                </div>
            </div>  
       </div>
       {{/each}}
   </div>
</section>
